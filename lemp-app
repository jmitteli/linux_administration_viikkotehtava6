server {
 listen 80;
 server_name ####HUOM;

    # LEMP-stack Kubernetesissa
    location /kube/ {
        # Korvaa tämä oikealla Minikube IP:llä ja portilla
        proxy_pass http://192.168.49.2:31883/kube/;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # WebSocket tuki (jos tarvitaan)
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_request_upgrade;
        proxy_set_header Connection "upgrade";

        # Timeout-asetukset
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

   #Data analysis
    location /data-analysis/ {
        proxy_pass http://127.0.0.1:8501/;
        proxy_http_version 1.1;

        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }


    
    location / {
        proxy_pass http://127.0.0.1:5000;
        proxy_http_version 1.1;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
#Chat history api
	location /chat/api/{
	
	proxy_pass http://127.0.0.1:5055/api/;
	proxy_set_header Host $host;	

	}

 # Chat-sivun staattiset tiedostot
	location /chat {
	alias /var/www/html/chat;
	index index.html;
	try_files $uri $uri/ /chat/index.html;
	}
 
# WebSocket proxy MQTT brokerille
	location /mqtt {
	proxy_pass http://127.0.0.1:9001;
	proxy_http_version 1.1;
	proxy_set_header Upgrade $http_upgrade;
	proxy_set_header Connection "upgrade";
	proxy_set_header Host $host;
	proxy_read_timeout 86400;
	proxy_send_timeout 86400;
	}

}
